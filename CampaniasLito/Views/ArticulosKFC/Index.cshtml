@model IEnumerable<CampaniasLito.Models.ArticuloKFC>

@{
    ViewBag.Title = "Artículos";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="panel" style="margin-right: 2%">
        <div class="panel-heading table-responsive" id="panelH">

            <a href="@Url.Action("Create", "ArticulosKFC", new { })" class="botonF1 dialog-window-medium">
                <i class="fas fa-plus-circle"></i>
            </a>

            <table id="dataTable" cellspacing="0">
                <tr>
                    <td class=" col-xs-4">
                        <h2><i class="fas fa-barcode "></i> @ViewBag.Title</h2>
                    </td>
                    @using (Html.BeginForm("Index", "ArticulosKFC", FormMethod.Get))
                    {
                        <td class="col-xs-7">
                            <div id="botones" class="input-group" style="display:flex; float:right">
                                <input class="input-group-addon" type="text" name="articulo" id="articulo" value="@Session["articuloFiltro"].ToString()" style="color:#01207B; text-transform:uppercase; border-radius:10px 0 0 10px; text-align:center; width:250px" />
                                <button type="submit" class="fas fa-search btn btn-pilares" style="border-radius:0 10px 10px 0; text-align: right; font-size: 17px"></button>
                            </div>
                        </td>
                    }
                </tr>
            </table>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable" cellspacing="0">
                    <thead style="font-size:17px; font-weight:bold; background-color:#DF2530; color: #fff; text-transform: uppercase">
                        <tr>
                            <th align="center" style="width: 35%">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th align="center" style="width: 25%">
                                @Html.DisplayNameFor(model => model.Proveedor.Nombre)
                            </th>
                            <th align="center" style="width: 10%">
                                @Html.DisplayNameFor(model => model.Familia)
                            </th>
                            <th align="center" style="width: 15%">
                                Tiendas
                            </th>
                            <th align="center" style="width: 15%">
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="unId70" class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%; margin-bottom: -40px" id="dataTable" cellspacing="0">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="font-size:12px; text-transform: capitalize">
                                <td style="width: 35%">
                                    <a href="@Url.Action("Edit", "ArticulosKFC", new { id = item.ArticuloKFCId})" class="dialog-window-medium" style="text-decoration: none; list-style: none; color: #000">
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </a>
                                </td>
                                <td style="width: 25%">
                                    <a href="@Url.Action("Edit", "ArticulosKFC", new { id = item.ArticuloKFCId})" class="dialog-window-medium" style="text-decoration: none; list-style: none; color: #000">
                                        @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
                                    </a>
                                </td>
                                <td style="width: 10%" align="center">
                                    <a href="@Url.Action("Edit", "ArticulosKFC", new { id = item.ArticuloKFCId})" class="dialog-window-medium" style="text-decoration: none; list-style: none; color: #000">
                                        @Html.DisplayFor(modelItem => item.Familia)
                                    </a>
                                </td>
                                <td style="width: 10%" align="center">
                                    <a id="botones" href="@Url.Action("AsignarTiendas", "ArticulosKFC", new { id = item.ArticuloKFCId})" class="btn btn-danger dialog-window-medium-tiendas" style="background-color: transparent; border:none; font-size: 20px">
                                        <i class="fas fa-plus-circle"></i>
                                    </a>
                                </td>
                                <td style="width: 15%" align="center">
                                    <a id="botones" href="@Url.Action("Delete", "ArticulosKFC", new { id = item.ArticuloKFCId})" class="btn btn-danger dialog-window-medium" style="background-color: transparent; border:none; font-size: 20px">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="mediumModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%; z-index: 999999">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="mdialTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="mediumModalTienda" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); margin-top: -120px; z-index: 999999">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="mdialTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/js/sweetalert.js" type="text/javascript"></script>
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-medium", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#mediumModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#mediumModal .te').html(data);
                        $('#mediumModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-medium-tiendas", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#mediumModalTienda').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#mediumModalTienda .te').html(data);
                        $('#mediumModalTienda').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

    </script>

    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }
    </script>

}