                                            </a>
                                        </td>
                                        <td style="width: 40%">
                                            <a href="@Url.Action("Edit", "Campañas", new { id = item.CampañaId})" class="dialog-window-small" style="text-decoration: none; list-style: none; color: white">
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </a>
                                        </td>
                                        <td style="width: 15%" align="center">
                                            <a href="@Url.Action("Edit", "Campañas", new { id = item.CampañaId})" class="dialog-window-small" style="text-decoration: none; list-style: none; color: white">
                                                @Html.DisplayFor(modelItem => item.Generada)
                                            </a>
                                        </td>
                                        <td style="width: 15%" align="center">
                                            <a id="botones" href="@Url.Action("Create", "CampañaTiendas", new { id = item.CampañaId})" class="btn btn-danger" style="background-color: transparent; border:none; font-size: 20px">
                                                <i class="fas fa-plus-circle"></i>
                                            </a>
                                        </td>
                                        <td style="width: 15%" align="center">
                                            <a id="botones" href="@Url.Action("Delete", "Campañas", new { id = item.CampañaId})" class="btn btn-danger dialog-window-small" style="background-color: transparent; border:none; font-size: 20px">
