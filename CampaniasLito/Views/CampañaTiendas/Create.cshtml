                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>*@
            </div>
        }
    </div>

    <div class="modal fade" data-keyboard="false" id="smallModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="smallTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="extraLargeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="xtralargeTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/js")

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/js/sweetalert.js" type="text/javascript"></script>
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-small", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#smallModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#smallModal .te').html(data);
                        $('#smallModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-extralarge", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#extraLargeModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#extraLargeModal .te').html(data);
                        $('#extraLargeModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

    </script>

    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }
    </script>
}