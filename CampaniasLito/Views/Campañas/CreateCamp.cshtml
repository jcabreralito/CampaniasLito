    <script type="text/javascript">

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-xtraLarge", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#xtraLargeModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#xtraLargeModal .te').html(data);
                        $('#xtraLargeModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

    </script>



