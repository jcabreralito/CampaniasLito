<body>
    @using (Html.BeginForm("Create", "Campañas", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel" style="margin: 1% 2%">
            <div class="panel-heading table-responsive" id="panelH">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table style="width:100%; margin-top: -10px" id="dataTable" cellspacing="0">
                    <tr>
                        <td class=" col-sm-12">
                            <h2 style="color: white"><i class="fas fa-calendar-alt"></i> @ViewBag.Title</h2>
                        </td>
                        <td class="col-sm-12">
                            <div id="botones" class="input-group" style="display:flex; float:right">
                                <a href="@Url.Action("Index", "Campañas")">
                                    <i class="fas fa-times-circle btn btn-pilares" style="border-radius:10px; text-align: right; font-size: 17px"></i>
                                </a>
                            </div>
                        </td>
                        <td class="col-sm-12" align="right">
                            <div class="input-group">
                                <button type="submit" class="botonF1Modal btn-success" style="background-color: green">
                                    <i class="fas fa-check-circle"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>

            @Html.AntiForgeryToken()

            <div class="panel-body" style="padding-top: 10px; margin-bottom: -50px">
                <div class="form-horizontal row responsivoUsuarioLabel">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control responsivoUsuarioText inputModal", disabled = "disabled", @required = "true", @oninvalid = "setCustomValidity('Este campo es obligatorio')", @oninput = "setCustomValidity('')", @style = "text-transform:uppercase", placeholder = "Nombre" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control responsivoUsuarioText inputModal", disabled = "disabled", @required = "true", @oninvalid = "setCustomValidity('Este campo es obligatorio')", @oninput = "setCustomValidity('')", @style = "text-transform:uppercase", placeholder = "Descripción" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="height: 73vh !important; width: 96% !important; margin: 0 2% !important">
            @if (Model.Detalles.Count == 0)
            {
                <div id="unId35" class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <td style="width: 90%">
                                    <h2 class="responsivoUsuarioLabelFa"><i class="fa fa-shopping-cart responsivoUsuarioLabelFa"></i> Aún no se han agregado tiendas</h2>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            }
            else
            {
                <table id="unId70" cellspacing="0" width="100%" class="table-striped table-hover table-responsive display compact no-wrap">
                    <thead>
                        <tr id="chargedaysheader">
                            <th class="headcol fijar-headcol">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.Restaurante)
                            </th>
                            <th colspan="14">
                                PRODUCTO
                            </th>
                        </tr>
                        <tr id="chargelegendheader">
                            
                            <th scope="row" class="headcol">
                                <div class="sr-only">
                                    @Html.DisplayNameFor(model => model.Detalles[0].Tienda.Restaurante)
                                </div>
                            </th>
                            <th style="text-align:center" scope="col">
                                SEL.
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.Region.Nombre)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.Ciudad.Nombre)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.AcomodoDeCajas)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.AreaDeJuegos)
                            </th>
                            <th style="text-align: center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.Arroz)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.Autoexpress)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.BisquetMiel)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.CantidadDePantallas)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.CCoFranquicia)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.Clasificacion)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.CopeteAERemodelado)
                            </th>
                            <th style="text-align:center" scope="col">
                                @Html.DisplayNameFor(model => model.Detalles[0].Tienda.CopeteAETradicional)
                            </th>
                            <th style="text-align:center" scope="col">
                                <i class="fas fa-barcode"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="chargetabledata">
                        @foreach (var item in Model.Detalles)
                        {
                            <tr>
                                <th scope="row" class="fijar">
                                    @Html.DisplayFor(modelItem => item.Tienda.Restaurante)
                                </th>
                                <td align="center" scope="col">
                                    @Html.CheckBoxFor(modelItem => item.Seleccionada, htmlAttributes: new { @class = "checkTamanio" })
                                </td>
                                <td align="center" scope="col">
                                    @Html.DisplayFor(modelItem => item.Tienda.Region.Nombre)
                                </td>
                                <td align="center" scope="col">
                                    @Html.DisplayFor(modelItem => item.Tienda.Ciudad.Nombre)
                                </td>
                                <td align="center" scope="col">
                                    @Html.DisplayFor(modelItem => item.Tienda.AcomodoDeCajas)
                                </td>
                                <td align="center" scope="col">
                                    @Html.CheckBoxFor(modelItem => item.Tienda.AreaDeJuegos, new { @class = "checkTamanio", disabled = "disabled" })
                                </td>
                                <td align="center" scope="col">
                                    @Html.CheckBoxFor(modelItem => item.Tienda.Arroz, new { @class = "checkTamanio", disabled = "disabled" })
                                </td>
                                <td align="center" scope="col">
                                    @Html.CheckBoxFor(modelItem => item.Tienda.Autoexpress, new { @class = "checkTamanio", disabled = "disabled" })
                                </td>
                                <td align="center" scope="col">
                                    @Html.CheckBoxFor(modelItem => item.Tienda.BisquetMiel, new { @class = "checkTamanio", disabled = "disabled" })
                                </td>
                                <td align="center" scope="col">
                                    @Html.DisplayFor(modelItem => item.Tienda.CantidadDePantallas)
                                </td>
                                <td align="center" scope="col">
                                    @Html.DisplayFor(modelItem => item.Tienda.CCoFranquicia)
                                </td>
                                <td align="center" scope="col">
                                    @Html.DisplayFor(modelItem => item.Tienda.Clasificacion)
                                </td>
                                <td align="center" scope="col">
                                    @Html.CheckBoxFor(modelItem => item.Tienda.CopeteAERemodelado, new { @class = "checkTamanio", disabled = "disabled" })
                                </td>
                                <td align="center" scope="col">
                                    @Html.CheckBoxFor(modelItem => item.Tienda.CopeteAETradicional, new { @class = "checkTamanio", disabled = "disabled" })
                                </td>
                                <td align="center" scope="col">
                                    <a id="botones" href="@Url.Action("CreateCampArt", "Campañas", new { id = item.TiendaId})" class="btn btn-danger" style="background-color: transparent; border:none; font-size: 20px">
                                        <i class="fas fa-plus-circle"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    }
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery.datetimepicker.full.js"></script>
    <script src="~/Content/js/sweetalert.js" type="text/javascript"></script>
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>

    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }
    </script>

    @if (TempData["msgDetalles"] != null)
    {
        <script type="text/javascript">

            swal({
                title: "<span style='color:#fff'>@ViewBag.Title</span>",
                text: '<span style="color:#fff">@TempData["msgDetalles"].ToString()</span>',
                html: true,
                type: "info",
                showConfirmButton: false,
                animation: true,
                customClass: 'animated swing',
                background: '#B3C9D8',
                grow: 'fullscreen',
                timer: 2000,
            });
        </script>
    }

    @if (TempData["msgCampaña"] != null)
    {
        <script type="text/javascript">

            swal({
                title: "<span style='color:#fff'>@ViewBag.Title</span>",
                text: '<span style="color:#fff">@TempData["msgCampaña"].ToString()</span>',
                html: true,
                type: "info",
                showConfirmButton: false,
                animation: true,
                customClass: 'animated swing',
                background: '#B3C9D8',
                grow: 'fullscreen',
                timer: 2000,
            });
        </script>
    }
}
