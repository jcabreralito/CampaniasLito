@model IEnumerable<CampaniasLito.Models.Campaña>

@{
    ViewBag.Title = "Campañas";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="panel" style="margin-right: 2%">
        <div class="panel-heading table-responsive" id="panelH">

            <a href="@Url.Action("Create", "Campañas", new { })" class="botonF1 dialog-window-small">
                <i class="fas fa-plus-circle"></i>
            </a>

            <table id="dataTable" cellspacing="0">
                <tr>
                    <td class=" col-xs-4">
                        <h2><i class="fas fa-calendar-alt"></i> Campañas</h2>
                    </td>
                    @using (Html.BeginForm("Index", "Campañas", FormMethod.Get))
                    {
                        <td class="col-xs-7">
                            <div id="botones" class="input-group" style="display:flex; float:right">
                                <input class="input-group-addon" type="text" name="campaña" id="campaña" value="@Session["campañaFiltro"].ToString()" style="color:#01207B; text-transform:uppercase; border-radius:10px 0 0 10px; text-align:center; width:250px" />
                                <button type="submit" class="fas fa-search btn btn-pilares" style="border-radius:0 10px 10px 0; text-align: right; font-size: 17px"></button>
                            </div>
                        </td>
                    }
                </tr>
            </table>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable" cellspacing="0">
                    <thead style="font-size:18px; font-weight:bold; background-color:#DF2530; color: #fff; text-transform: uppercase">
                        <tr>
                            <th align="center" style="width: 15%">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th align="center" style="width: 40%">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th align="center" style="width: 15%">
                                @Html.DisplayNameFor(model => model.Generada)
                            </th>
                            <th align="center" style="width: 15%">
                                GENERAR
                            </th>
                            <th align="center" style="width: 15%">
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="unId70" class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%; margin-bottom: -40px" id="dataTable" cellspacing="0">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="font-size:12px; text-transform: capitalize">
                                <td style="width: 15%">
                                    <a href="@Url.Action("Edit", "Campañas", new { id = item.CampañaId})" class="dialog-window-small" style="text-decoration: none; list-style: none; color: #000">
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </a>
                                </td>
                                <td style="width: 40%">
                                    <a href="@Url.Action("Edit", "Campañas", new { id = item.CampañaId})" class="dialog-window-small" style="text-decoration: none; list-style: none; color: #000">
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </a>
                                </td>
                                <td style="width: 15%" align="center">
                                    @if (item.Generada == "NO")
                                    {
                                        <a href="@Url.Action("Edit", "Campañas", new { id = item.CampañaId})" class="dialog-window-small" style="text-decoration: none; list-style: none; color: #000; font-size: 20px">
                                            <i class="fas fa-times-circle"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Edit", "Campañas", new { id = item.CampañaId})" class="dialog-window-small" style="text-decoration: none; list-style: none; color: #000; font-size: 20px">
                                            <i class="fas fa-check-circle"></i>
                                        </a>
                                    }
                                </td>
                                <td style="width: 15%" align="center">
                                    @if (item.Generada == "NO")
                                    {
                                        <a id="botones" href="@Url.Action("CreateCampArt", "Campañas", new { tiendaId = item.CampañaId, campId = item.CampañaId })" class="btn btn-danger" style="background-color: transparent; border:none; font-size: 20px">
                                            <i class="fas fa-calendar-check"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a id="botones" href="#" class="btn btn-danger dialog-window-message" style="background-color: transparent; border:none; font-size: 20px">
                                            <i class="fas fa-ban"></i>
                                        </a>
                                    }
                                </td>
                                <td style="width: 15%" align="center">
                                    <a id="botones" href="@Url.Action("Delete", "Campañas", new { id = item.CampañaId})" class="btn btn-danger dialog-window-small" style="background-color: transparent; border:none; font-size: 20px">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="smallModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%; z-index: 999999">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="smallTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="extraLargeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%; z-index: 999999">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="xtralargeTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%; z-index: 999999">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="smallTamanio">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #DF2530; border-radius: 10px">
                    <h5 class="modal-title">Mensaje</h5>
                </div>
                <div class="modal-body panel-body">
                    <p style="color: black; font-size: 16px; font-weight: bold">Esta Campaña ya fue creada.</p>
                </div>
                <div class="modal-footer">
                    <div class="input-group" style="margin-top: 30px !important">
                        <button type="button" class="botonF1Modal btn-success" style="background-color: green" data-dismiss="modal">
                            <i class="fas fa-check-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/js/sweetalert.js" type="text/javascript"></script>
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-small", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#smallModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#smallModal .te').html(data);
                        $('#smallModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-extralarge", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#extraLargeModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#extraLargeModal .te').html(data);
                        $('#extraLargeModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-message", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#messageModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#messageModal .te').html(data);
                        $('#messageModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

    </script>

    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }
    </script>
}