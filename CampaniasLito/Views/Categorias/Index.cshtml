@model IEnumerable<CampaniasLito.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}
<div class="panel panel-primary" style="height: 87vh">
    <div class="panel-heading table-responsive">
        <table width="100%" id="dataTable" cellspacing="0">
            <tr>
                <td>
                    <h2><i class="fa fa-table"></i> Categorias</h2>
                </td>
                <td style="text-align:right">
                    <h2>@Html.ActionLink("Nueva", "Create", "Categorias", new { }, new { @class = "dialog-window btn btn-default" })</h2>
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" width="100%" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td style="text-align:right">
                                @Html.ActionLink("Editar", "Edit", new { id = item.CategoriaId }, new { @class = "dialog-window btn btn-outline btn-warning" })
                                @*@Html.ActionLink("Detalles", "Details", new { id = item.CategoriaId }, new { @class = "btn btn-outline btn-info" })*@
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.CategoriaId }, new { @class = "dialog-window btn btn-outline btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 class="modal-title"></h2>
            </div>*@
            <div class="modal-body"><div class="te">Please wait...</div></div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("body").on("click", "a.dialog-window", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var title = $link.text();
                $('#Create .modal-title').html(title);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#Create').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#Create .te').html(data);
                        $('#Create').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window", null, function (e) {
