@model CampaniasLito.Models.Ciudad

@{
    ViewBag.Title = "Eliminar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading">
            <table>
                <tr>
                    <td class="col-xs-6">
                        <h2 class="responsivoUsuarioLabelFa" style="color: #fff">Eliminar</h2>
                    </td>
                    <td class=" col-xs-12"></td>
                    <td align="right" class="col-xs-1">
                        <div class="input-group">
                            <button type="button" class="botonF2 btn-danger" data-dismiss="modal">
                                <i class="fas fa-times-circle"></i>
                                @*SALIR*@
                            </button>
                        </div>
                    </td>
                    <td align="right" class="col-xs-1">
                        <div class="input-group">
                            <button type="submit" class="botonF1Modal btn-success" style="background-color: green">
                                <i class="fas fa-check-circle"></i>
                                @*ACEPTAR*@
                            </button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        <div class="panel-body">
            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <dl class="col-sm-12" style="font-size: 16px">

                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Nombre):
                    </dt>

                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </dl>
                <dl class="col-sm-12" style="font-size: 16px">

                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Region.Nombre):
                    </dt>

                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Region.Nombre)
                    </dd>
                </dl>

            </div>
        </div>
    </div>
}