@model CampaniasLito.Models.Familia
@{
}

@using (Html.BeginForm("AddOrEdit", "Familias", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.FamiliaId)

    <div class="row">
        <div class="input-field col s12">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @type = "text", @class = "validate", @required = "true" } })
            <label for="Descripcion">Descripción</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @type = "text", @class = "validate", @required = "true" } })
            <label for="Codigo" class="active">Código</label>
        </div>
    </div>

    <div class="center-align">
        <button id="aceptar" disabled type="submit" title="Aceptar" class="btn-floating btn-sm green" style="border-radius: 50%" onclick="hidePage()">
            <i class="large material-icons">check</i>
        </button>
    </div>
}

<script>

    var desc = document.getElementById('Descripcion');
    var cod = document.getElementById('Codigo');
    var acep = document.getElementById('aceptar');

    desc.addEventListener('change', function () {
        alcambiar();
    });

    cod.addEventListener('change', function () {
        alcambiar();
    });

    function alcambiar() {

        if (desc.value != "" && cod.value != "") {
            acep.disabled = false;
        }
        else {
            acep.disabled = true;
        }
    }

</script>