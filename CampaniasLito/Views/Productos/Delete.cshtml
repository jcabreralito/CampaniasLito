@model CampaniasLito.Models.Producto

@{
    ViewBag.Title = "Eliminar Producto";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <table>
            <tr>
                <td class="col-md-12">
                    <h2><i class="fa fa-table"></i> @ViewBag.Title</h2>
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-body">

        <h3>¿Eliminar este Registro?</h3>
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Categoria.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Categoria.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Compañias.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Compañias.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Impuesto.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Impuesto.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CodigoBarras)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CodigoBarras)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Precio)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Imagen)
                </dt>

                <dd>
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="@Url.Content(Model.Imagen)" alt="Image" style="width:150px;height:150px;" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Content/Productos/Productos.png")" alt="Image" style="width:150px; height:150px;" />
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Comentarios)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Comentarios)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar" class="btn btn-outline btn-primary" />
                    @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-outline btn-danger" })
                </div>
            }
        </div>
    </div>
</div>