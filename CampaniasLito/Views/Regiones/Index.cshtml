@{
    ViewBag.Title = "Regiones";

    var vistaEquity = string.Empty;
    var vistaFranquicias = string.Empty;
    var vistaStock = string.Empty;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

</head>
<body>
    <div class="panel">
        <div class="panel-heading table-responsive" id="panelH">

            <table id="dataTable" cellspacing="0">
                <tr>
                    <td class=" col-xs-2">
                        <h2><i id="iconoTitulo" class="fas fa-map-marked-alt"></i></h2>
                    </td>
                    <td class=" col-xs-5" align="center">
                        <h2 id="titulo"> @ViewBag.Title Equity</h2>
                    </td>

                    <td class=" col-xs-4" align="right">
                        <input type="submit" value="EQUITY" id="btnEquity" class="btn btn-primary" onclick="mostrarEquity();" />
                        <input type="submit" value="FRANQUICIAS" id="btnFranquicias" class="btn btn-primary" onclick="mostrarFranquicias();" />
                        <input type="submit" value="STOCK" id="btnStock" class="btn btn-primary" onclick="mostrarStock();" />
                    </td>
                </tr>
            </table>
        </div>

        @if (string.IsNullOrEmpty(Session["VistaEquity"].ToString()) &&
            string.IsNullOrEmpty(Session["VistaFranquicias"].ToString()) &&
            string.IsNullOrEmpty(Session["VistaStock"].ToString()))
        {
            <style>
                .vistaE {
                    display: table;
                    width: 100% !important;
                }

                .vistaF {
                    display: table;
                    width: 100% !important;
                    height: 0px !important;
                }

                .vistaS {
                    display: table;
                    width: 100% !important
                }
            </style>
        }
        else if (!string.IsNullOrEmpty(Session["VistaEquity"].ToString()))
        {
            <style>
                .vistaE {
                    display: table;
                    width: 100% !important
                }

                .vistaF {
                    display: table;
                    width: 100% !important
                }

                .vistaS {
                    display: table;
                    width: 100% !important
                }
            </style>

        }
        else if (!string.IsNullOrEmpty(Session["VistaFranquicias"].ToString()))
        {
            <style>
                .vistaE {
                    display: normal;
                }

                .vistaF {
                    display: block;
                }

                .vistaS {
                    display: normal;
                }
            </style>

        }
        else if (!string.IsNullOrEmpty(Session["VistaStock"].ToString()))
        {
            <style>
                .vistaE {
                    display: normal;
                }

                .vistaF {
                    display: normal;
                }

                .vistaS {
                    display: block;
                }
            </style>
        }

        <div id="equity" class="panel-body vistaE" style="padding-top: 10px; margin-bottom: -40px; height: 78.5vh; visibility: visible">
            @Html.Action("RegionesEquity", new { })
        </div>

        <div id="franquicias" class="panel-body vistaF" style="padding-top: 10px; margin-bottom: -40px; visibility: hidden">
            @Html.Action("RegionesFranquicias", new { })
        </div>

        <div id="stock" class="panel-body vistaS" style="padding-top: 10px; margin-bottom: -40px; visibility: hidden">
            @Html.Action("RegionesStock", new { })
        </div>

    </div>

    <div class="modal fade" data-keyboard="false" id="smallModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8);">
        <div class="modal-dialog" id="smallTamanio">
            <div class="modal-content">
                <div class="te">

                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-small", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#smallModal').modal('show');
                    $('input:text:visible:first').focus();
                }
                else {
                    $.get(url, function (data) {
                        $('#smallModal .te').html(data);
                        $('#smallModal').modal();
                    }).success(function () {
                        $('input:text:visible:first').focus();
                    });

                }
            });
        });

    </script>

    <script>

        function mostrarEquity() {

            $("#titulo").text(' @ViewBag.Title' + ' EQUITY');

            $('#btnEquity').addClass('active');
            $('#btnFranquicias').removeClass('active');
            $('#btnStock').removeClass('active');

            @*var url = '@Url.Action("RegionesEquity", "Regiones")';*@

            document.getElementById('equity').style.display = 'table';
            document.getElementById('franquicias').style.display = 'none';
            document.getElementById('stock').style.display = 'none';
            document.getElementById('equity').style.visibility = 'visible';
            document.getElementById('franquicias').style.height = '78.5vh';
            document.getElementById('stock').style.height = '78.5vh';

            //    $.get(url).done(function (data) {
            //        $('#equity').append(data);
            //    }).fail(manjarErrorAjax);

            //var clickRegion = "SI";


        }

        function manejarErrorAjax(err) {
            console.log(err.responseText)
        }

        function mostrarFranquicias() {

            $("#titulo").text(' @ViewBag.Title' + ' FRANQUICIAS');

            $('#btnEquity').removeClass('active');
            $('#btnFranquicias').addClass('active');
            $('#btnStock').removeClass('active');

            document.getElementById('equity').style.display = 'none';
            document.getElementById('franquicias').style.display = 'table';
            document.getElementById('stock').style.display = 'none';
            document.getElementById('franquicias').style.visibility = 'visible';
            document.getElementById('franquicias').style.height = '78.5vh';
            document.getElementById('stock').style.height = '78.5vh';

        }

        function mostrarStock() {

            $("#titulo").text(' @ViewBag.Title' + ' STOCK');

            $('#btnEquity').removeClass('active');
            $('#btnFranquicias').removeClass('active');
            $('#btnStock').addClass('active');

            document.getElementById('equity').style.display = 'none';
            document.getElementById('franquicias').style.display = 'none';
            document.getElementById('stock').style.display = 'table';
            document.getElementById('stock').style.visibility = 'visible';
            document.getElementById('franquicias').style.height = '78.5vh';
            document.getElementById('stock').style.height = '78.5vh';

        }

    </script>
    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }
    </script>
}