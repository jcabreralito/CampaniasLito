<body>
    <div class="panel">
        <div class="panel-heading table-responsive" id="panelH">

            <a href="@Url.Action("Create", "Regiones", new { id = 2 })" class="botonF1 dialog-window-small" onclick="viewPageSwal()">
                <i class="fas fa-plus-circle"></i>
            </a>

        </div>

        <div style="height: 71.5vh !important; max-height: 98vh !important;">
            <table id="miTablaRegionS" class="table-striped row-border compact" width="100%">
                <thead>
                    <tr>
                        <th align="center">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th align="center">
                            EDITAR
                        </th>
                        <th align="center">
                            ELIMINAR
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(x => x.EquityFranquicia == "STOCK"))
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td align="center">
                                <a href="@Url.Action("Edit", "Regiones", new { id = item.RegionId})" class="btn-dark dialog-window-small" style="background-color: transparent; border:none;" onclick="viewPageSwal()">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                            <td align="center">
                                <a id="botones" href="@Url.Action("Delete", "Regiones", new { id = item.RegionId})" class="btn-dark dialog-window-small" style="background-color: transparent; border:none;" onclick="viewPageSwal()">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>
                        </th>
                        <th>
                        </th>
                        <th>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

