                <span class="badge">&check;</span>
            </label>
            <div class="border"></div>
        </div>
    </div>

    <div class="mat-input col-sm-3 focus">
        <div class="mat-input-outer col-sm-12 focus" style="margin: 0 !important;">
            @Html.TextBoxFor(model => model.CantidadDePantallas, new { htmlAttributes = new { }, @type = "text", @disabled = "disabled", @style = "text-transform:uppercase" })
