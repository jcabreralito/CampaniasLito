@model IEnumerable<CampaniasLito.Models.Rol>

@{
    ViewBag.Title = "Roles";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="panel" style="margin-right: 2%">
        <div class="panel-heading table-responsive" id="panelH">

            <a href="@Url.Action("Create", "Roles", new { })" class="botonF1 dialog-window-small">
                <i class="fas fa-plus-circle"></i>
            </a>

            <table style="width:100%" id="dataTable" cellspacing="0">
                <tr>
                    <td class=" col-xs-4">
                        <h2 style="color: white"><i class="fas fa-user-lock "></i> @ViewBag.Title</h2>
                    </td>
                    <td class="col-xs-7">
                    </td>
                </tr>
            </table>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable" cellspacing="0">
                    <thead style="font-size:18px; font-weight:bold; color: #fff; text-transform: uppercase">
                        <tr>
                            <th align="center" style="width: 85%">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th align="center" style="width: 15%">
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="unId70" class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable" cellspacing="0">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="font-size:12px; text-transform: capitalize">
                                <td style="width: 85%">
                                    <a href="@Url.Action("Edit", "Roles", new { id = item.RolId})" class="dialog-window-small" style="text-decoration: none; list-style: none; color: white">
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </a>
                                </td>
                                <td style="width: 15%" align="center">
                                    <a id="botones" href="@Url.Action("Delete", "Roles", new { id = item.RolId})" class="btn btn-danger dialog-window-small" style="background-color: transparent; border:none; font-size: 20px">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="smallModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="smallTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/js/sweetalert.js" type="text/javascript"></script>
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-small", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#smallModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#smallModal .te').html(data);
                        $('#smallModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

    </script>

    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }
    </script>
}