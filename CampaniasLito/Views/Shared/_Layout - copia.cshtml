<body id="body" style="font-family: 'Hero'">
    <input type="checkbox" id="btn-menu" onchange="mostrarMenu()" />
    <header>
        <table>
            <thead>
                <tr>
                    <th class="col-xs-1">
                        <div class="col-xs-12">
                            <div id="logo">
                                @Html.ActionLink("Inicio", "Index", "Home", new { }, new { @class = "inicio txt", @onclick = "viewPage()" })
                                <div class="tooltipInicio" style="margin-left: 40px">Inicio</div>
                            </div>
                            <div id="logo2" style="height: 0">
                                <label for="btn-menu">
                                    <span class="spanhtml txt" style="text-decoration: none; list-style: none; color: white">
                                        <img class="txt" src="~/Content/Fotos/icono-menu.png" style="margin-top: -5px; border-radius: 5px; width: 40px; height: 45px" />
                                    </span>
                                </label>
                                <div class="tooltipInicio" style="margin-left: 40px">Menú</div>
                            </div>
                        </div>
                    </th>
                    <th class="col-xs-9">
                        <nav class="col-xs-12 menuNav" id="menuNav">
                            <ul class="col-xs-12 ulNav">
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <li class="col-xs-8"></li>
                                    <li class="col-xs-1">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Home", new { }, new { @class = "fa fa-home txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Inicio</div>
                                        </div>

                                    </li>
                                    <li class="col-xs-1">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Roles", new { }, new { @class = "fas fa-user-lock txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Roles</div>
                                        </div>
                                    </li>
                                    <li class="col-xs-1">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Compañias", new { }, new { @class = "fas fa-building txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Compañias</div>
                                        </div>
                                    </li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Usuarios", new { }, new { @class = "fas fa-users txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Usuarios</div>
                                        </div>
                                    </li>
                                }

                                else
                                {
                                    <li class="col-xs-5"></li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Home", new { }, new { @class = "fa fa-home txt iconomenu" })
                                            <div class="tooltip">Inicio</div>
                                        </div>

                                    </li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Regiones", new { }, new { @class = "fas fa-map-marked-alt txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Regiones</div>
                                        </div>
                                    </li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Ciudades", new { }, new { @class = "fas fa-map-marker-alt txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Ciudades</div>
                                        </div>
                                    </li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Restaurantes", new { }, new { @class = "fas fa-store txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Restaurantes</div>
                                        </div>
                                    </li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Familias", new { }, new { @class = "fas fa-boxes txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Familias</div>
                                        </div>
                                    </li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Materiales", new { }, new { @class = "fas fa-barcode txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Materiales</div>
                                        </div>
                                    </li>
                                    <li class="col-xs-1 ">
                                        <div>
                                            @Html.ActionLink(" ", "Index", "Campañas", new { }, new { @class = "fas fa-calendar-alt txt iconomenu", @onclick = "viewPage()" })
                                            <div class="tooltip">Campañas</div>
                                        </div>
                                    </li>
                                }

                            </ul>
                        </nav>
                    </th>
                    <th class="col-xs-1">
                        <div style="margin-right: -30px; text-align: right">

                            @if (Session["Foto"] != null && Session["NombreCompleto"] != null)
                            {
                                <i class="fas fa-user fa-2x txt img-circle" style="background-color: #fff; color: #000; padding: 10px">
                                </i>
                                <div class="tooltip2">@Session["NombreCompleto"].ToString()</div>
                            }
                            else if (Session["Foto"] == null && Session["NombreCompleto"] != null)
                            {
                                <i class="fas fa-user fa-2x txt img-circle" style="background-color: #fff; color: #000; padding: 10px">
                                </i>
                                <div class="tooltip2">@Session["NombreCompleto"].ToString()</div>
                            }
                        </div>
                    </th>
                    <th class="col-xs-1" align="right">
                        <div class="col-xs-12 margentopsesion2" style="margin-left: 10px">
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <ul>
                                        <li style="list-style: none; text-align: right">
                                            <a href="javascript:document.getElementById('logoutForm').submit()" class="lnr lnr-power-switch actionlinkclose txt"></a>
                                            <div class="tooltipCerrar">Cerrar Sesión</div>
                                        </li>
                                    </ul>
                                }
                            }
                            else
                            {
                                <ul>
                                    <li style="list-style: none; text-align: right; margin-left: 40px">
                                        @Html.ActionLink(" ", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "actionlinkstart lnr lnr-power-switch txt", style = "list-style:none;" })
                                        <div class="tooltipCerrar">Iniciar Sesión</div>
                                    </li>
                                </ul>
                            }
                        </div>
                    </th>
                </tr>
            </thead>
        </table>
    </header>

    <script>

        function viewPage() {
            document.getElementById('contenedor_carga').style.visibility = 'visible';
            document.getElementById('contenedor_carga').style.opacity = '1';

            swal({
                title: "<span style='color:#fff; margin-top: 5%'></span>",
                html: true,
                showConfirmButton: false,
                animation: true,
                customClass: 'animated swing',
                background: '#B3C9D8',
                grow: 'fullscreen',
            });
        };

    </script>

    <main>
        <div class="page-wrapper" style="position: absolute; background-size: cover">
            <div class="py-3">
                <div class="container-fluid" style="height: 10%">
                    <div id="contenedor_carga">
                        <div id="carga">
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>


    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script src="~/Scripts/fileupload.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="~/Content/vendor/font-awesome/js/fontawesome.js"></script>

    @Scripts.Render("~/bundles/jqueryval")

    <script>

        function mostrarMenu(obj) {
            if (document.getElementById("btn-menu").checked)
                document.getElementById('menuNav').style.marginTop = '40px';

            else
                document.getElementById('menuNav').style.marginTop = '-180%';
        }

    </script>

    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }

    </script>

    @if (TempData["mensajeLito"] != null)
    {
        <script type="text/javascript">

            swal({
                title: "<span style='color:#fff'>@ViewBag.Title</span>",
                text: '<span style="color:#fff">@TempData["mensajeLito"].ToString()</span>',
                html: true,
                type: "success",
                showConfirmButton: false,
                animation: true,
                customClass: 'animated swing',
                background: '#B3C9D8',
                grow: 'fullscreen',
                timer: 2000,
            });
        </script>
    }

</body>
</html>
