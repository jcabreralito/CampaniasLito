@model IEnumerable<CampaniasLito.Models.Tienda>

@{
    ViewBag.Title = "Tiendas";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="panel" style="margin-right: 2%">
        <div class="panel-heading table-responsive" id="panelH">

            <a href="@Url.Action("Create", "Tiendas", new { })" class="botonF1 dialog-window-large">
                <i class="fas fa-plus-circle"></i>
            </a>

            <table style="width:100%" id="dataTable" cellspacing="0">
                <tr>
                    <td class=" col-xs-4">
                        <h2 style="color: white"><i class="fas fa-store "></i> @ViewBag.Title</h2>
                    </td>
                    @using (Html.BeginForm("Index", "Tiendas", FormMethod.Get))
                    {
                        <td class="col-xs-7">
                            <div id="botones" class="input-group" style="display:flex; float:right">
                                <input class="input-group-addon" type="text" name="tienda" id="tienda" value="@Session["tiendaFiltro"].ToString()" style="color:#CE5432; text-transform:uppercase; border-radius:10px 0 0 10px; text-align:center; width:250px" />
                                <button type="submit" class="fas fa-search btn btn-pilares" style="border-radius:0 10px 10px 0; text-align: right; font-size: 17px"></button>
                            </div>
                        </td>
                    }
                </tr>
            </table>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable" cellspacing="0">
                    <thead style="font-size:17px; font-weight:bold; background-color:#DF2530; color: #fff; text-transform: uppercase">
                        <tr>
                            <th align="center" style="width: 25%">
                                @Html.DisplayNameFor(model => model.CCoFranquicia)
                            </th>
                            <th align="center" style="width: 55%">
                                @Html.DisplayNameFor(model => model.Restaurante)
                            </th>
                            <th align="center" style="width: 10%">
                            </th>
                            <th align="center" style="width: 10%">
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="unId70" class="table-responsive">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="dataTable" cellspacing="0">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="font-size:12px; text-transform: capitalize">
                                <td style="width: 25%" align="center">
                                    <a href="@Url.Action("Edit", "Tiendas", new { id = item.TiendaId})" class="dialog-window-large" style="text-decoration: none; list-style: none; color: white">
                                        @Html.DisplayFor(modelItem => item.CCoFranquicia)
                                    </a>
                                </td>
                                <td style="width: 55%">
                                    <a href="@Url.Action("Edit", "Tiendas", new { id = item.TiendaId})" class="dialog-window-large" style="text-decoration: none; list-style: none; color: white">
                                        @Html.DisplayFor(modelItem => item.Restaurante)
                                    </a>
                                </td>
                                <td style="width: 10%" align="center">
                                    <a id="botones" href="@Url.Action("Details", "Tiendas", new { id = item.TiendaId})" class="btn btn-danger dialog-window-large" style="background-color: transparent; border:none; font-size: 20px">
                                        <i class="fas fa-list-alt"></i>
                                    </a>
                                </td>
                                <td style="width: 10%" align="center">
                                    <a id="botones" href="@Url.Action("Delete", "Tiendas", new { id = item.TiendaId})" class="btn btn-danger dialog-window-large" style="background-color: transparent; border:none; font-size: 20px">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false" style="background-color: rgba(0, 0, 0, 0.8); padding-top: 5%">
        <div class="modal-dialog modal-dialog-centered mx-auto" id="largeTamanio">
            <div class="modal-content">
                <div class="te">Please wait...</div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/js/sweetalert.js" type="text/javascript"></script>
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("body").on("click", "a.dialog-window-large", null, function (e) {
                e.preventDefault();
                var $link = $(this);
                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#largeModal').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#largeModal .te').html(data);
                        $('#largeModal').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });

                }
            });
        });

    </script>

    <script>
        window.onload = function () {
            var contenedor = document.getElementById('contenedor_carga');
            contenedor.style.visibility = 'hidden';
            contenedor.style.opacity = '0';
        }
    </script>
}